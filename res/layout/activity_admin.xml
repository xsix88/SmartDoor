<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AdminActivity" >

    <TextView
        android:id="@+id/admin_status_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Status" />

    <EditText
        android:id="@+id/admin_status_text"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/admin_status_textview"
        android:ems="10"
        android:inputType="textMultiLine"
        android:text="I am out for lunch, will be back in 30 min" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/admin_picture_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/select_static_status"
        android:layout_marginTop="50dp"
        android:text="Picture" />

    <ImageView
        android:id="@+id/admin_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/admin_picture_textview"
        android:layout_below="@+id/admin_picture_textview"
        android:src="@drawable/lunch" />

    <Button
        android:id="@+id/admin_update_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="Update" />

    <Button
        android:id="@+id/clearNotesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="Clear notes" />

    <Button
        android:id="@+id/select_static_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/admin_status_text"
        android:text="Select status from a list" />

    <EditText
        android:id="@+id/pictureTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/admin_picture"
        android:layout_toLeftOf="@+id/admin_picture_change_button"
        android:ems="10"
        android:hint="Find picture of..." />

    <Button
        android:id="@+id/admin_picture_change_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/admin_picture"
        android:layout_alignParentRight="true"
        android:text="Search" />

    <Button
        android:id="@+id/noteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/clearNotesButton"
        android:layout_alignParentLeft="true"
        android:text="Read notes" />
    
    <AbsoluteLayout
        android:id="@+id/alayout"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/admin_picture_change_button"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".MainActivity" >

        <ImageView
            android:id="@+id/aboutme"
            android:layout_width="171dp"
            android:layout_height="171dp"
            android:contentDescription="aboutme"
            android:src="@drawable/aboutme" />

        <ImageView
            android:id="@+id/coffee"
            android:layout_width="171dp"
            android:layout_height="171dp"
            android:contentDescription="coffee"
            android:src="@drawable/coffee" />

        <ImageView
            android:id="@+id/postit"
            android:layout_width="171dp"
            android:layout_height="171dp"
            android:contentDescription="postit"
            android:src="@drawable/postit" />

    </AbsoluteLayout>

</RelativeLayout>